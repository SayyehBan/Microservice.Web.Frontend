@using Microservice.Web.Frontend.Services.OrderServices;
@model List<OrderDto>
@{
    ViewData["Title"] = "Index";
}

<table class="table col-md-9">
    <thead>
        <tr>
            <th>
                <label>تاریخ ثبت</label>

            </th>
            <th>
                <label>تعداد محصولات</label>
            </th>
            <th>
                <label>قیمت کل</label>
            </th>
            <th>
                <label>پرداخت شده؟</label>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>


                <td>
                    @Html.DisplayFor(modelItem => item.OrderPlaced)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ItemCount)
                </td>
                <td>
                    <b class="text-success"> @item.TotalPrice.ToString("n0") تومان</b>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderPaid)
                </td>
                <td class="row">
                    <a class="" asp-action="Detail" asp-controller="Orders" asp-route-id="@item.Id"> جزئیات</a>
                </td>
            </tr>
        }

    </tbody>

</table>

